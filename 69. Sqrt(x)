class Solution {
    public int mySqrt(int x) {
    if(x==0||x==1)
    {
        return x;
    }    
   int  low=1;
   int  high=x/2;       //calculate for initial value of high 
   int  answer=0;
    while(low<=high)
    {
       int mid=(low+high)/2;            // calculate value for mid and further evaluate
        if(mid<=x/mid)
        {
            answer=mid;
            low=mid+1;
        }
        else
        {
            high=mid-1;
        }
    }
        return answer;
    }
}
