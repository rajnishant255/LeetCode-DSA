class Solution {
    List<String> ans = new ArrayList<>();

    public List<String> generateParenthesis(int n) {
        helper("", 0, 0, n);
        return ans;
    }

    void helper(String s, int open, int close, int n) {

        // finished string
        if (s.length() == 2 * n) {
            ans.add(s);
            return;
        }

        // add '('
        if (open < n) {
            helper(s + "(", open + 1, close, n);
        }

        // add ')'
        if (close < open) {
            helper(s + ")", open, close + 1, n);
        }
    }
}
