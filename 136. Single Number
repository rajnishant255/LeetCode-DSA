class Solution {
    public int singleNumber(int[] nums)
    {
        Arrays.sort(nums);
        for(int i=0; i<nums.length-1; i=i+2)    //here we are iterating loop for i+2 as after sorting next unique element comes at third position
        {
            {
                if(nums[i] != nums[i+1])
                {
                    return nums[i];
                }
            }
        }
        return nums[nums.length - 1];
    }
}
