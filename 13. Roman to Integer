class Solution {
     int value(char c) {
        if (c == 'I') return 1;
        if (c == 'V') return 5;
        if (c == 'X') return 10;
        if (c == 'L') return 50;
        if (c == 'C') return 100;
        if (c == 'D') return 500;
        return 1000;
     }
    public int romanToInt(String s) {
       int result=0;
       int prev=0;
       for(int i=s.length()-1; i>=0; i--)
       {
         int curr = value(s.charAt(i));     // call value function here that has roman value

            if (curr < prev)                // it checks after the first iteration
                result -= curr;
            else
                result += curr;             // stores the current plus result in result

            prev = curr;                    // update previous with with current value
        }
        return result;                      // return result outside loop
    }
}
