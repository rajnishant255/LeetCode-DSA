class Solution {
    public String addStrings(String num1, String num2) {
        int i = num1.length() - 1;
        int j = num2.length() - 1;
        int carry = 0;
        
        StringBuilder sb = new StringBuilder();
        
        while(i >= 0 || j >= 0 || carry > 0){
            int a = (i >= 0) ? num1.charAt(i) - '0' : 0;        // here in case ternary operator used
            int b = (j >= 0) ? num2.charAt(j) - '0' : 0;        // used ternary operator
            
            int sum = a + b + carry;
            sb.append(sum % 10);        // add element to string builder object
            carry = sum / 10;
            
            i--;
            j--;
        }
        
        return sb.reverse().toString();        // reverse obtained 
    
        //BigInteger x= new BigInteger(num1);    // bu using big int
        //BigInteger y= new BigInteger(num2);

        //  int x = Integer.parseInt(num1);
        //  int y = Integer.parseInt(num2);
        
        //  return String.valueOf(x + y);       // for short integer range
        // return Integer.toString(x + y);
        //return x.add(y).toString();     // by using big int

    }
}
