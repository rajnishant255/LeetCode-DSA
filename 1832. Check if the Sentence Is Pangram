class Solution {
    public boolean checkIfPangram(String sentence) {
      if(sentence.length()<26) return false;
      HashSet<Character> set = new HashSet<>();
      for(int i=0; i<sentence.length(); i++)
      {
        set.add(sentence.charAt(i));    // will take each character and store in hashset as stores uniquely
        if(set.size()==26) return true;     // if size of sentence is 26 then return true otherwise false
      }
      return false;  
    }
}
