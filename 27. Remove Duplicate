class Solution {
    public int removeElement(int[] nums, int val) {
        int k = 0; // index for next valid element as a counter let say
        Arrays.sort(nums);
        for (int i = 0; i < nums.length; i++) {
            if (nums[i] != val)     // checks for nums[i] val not equals to val
             {
                nums[k] = nums[i];      // checks for the element in array and stores in kth index
                k++;
            }
        }
        return k;
    }
}
