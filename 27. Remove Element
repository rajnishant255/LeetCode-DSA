class Solution {
    public int removeElement(int[] nums, int val) {
        int k = 0; // index for next valid element as a counter let say
        Arrays.sort(nums);
        for (int i = 0; i < nums.length; i++)
        {
            if (nums[i] != val)             // if statement nums[i] !=val and run for true condition
            {
                nums[k] = nums[i];    // checks for value at k index of nums = i th index and if true then increment
                k++;
            }
        }
        return k;
    }
}
