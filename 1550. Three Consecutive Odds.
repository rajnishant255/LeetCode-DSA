class Solution {
    public boolean threeConsecutiveOdds(int[] arr) {
        int count=0;
       for(int i=0; i<arr.length; i++)
       {
            if(arr[i] %2 !=0 )
            {
                count++;
            }
            else{
                count=0;        // if there is even no in between then set count to 0 only we need 3 lagatar odd
                 }
            if(count==3) return true;
       } 
        return false;
    }
}
